@model IEnumerable<LoanSoftware.Models.VIEW.VBranchLimit>

@{
    ViewBag.Title = "Index";
    var i = 1;
}

  
        <div class="card card-primary card-outline card-outline-tabs">
            <div class="card-body">
                <table class="table table-bordered table-striped" id="tbl">
                    <thead style="font-family: 'Calibri'; text-align:center;">
                        <tr>
                            <th>SL</th>
                            <th>
                                Branch Code
                            </th>
                            <th>
                                Branch Name
                            </th>
                            <th>
                                BranchLimit
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody style="font-family: 'Calibri'; text-align:center;">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BrLimit)
                                </td>
                                <td style="font-family:'Times New Roman'">
                                    <a href="/Branchlimits/Edit/@item.LimitID"><i class="btn btn-success btn-sm" style="font-size:12px">Edit</i></a>
                                    <a href="/Branchlimits/Details/@item.LimitID"><i class="btn btn-default btn-sm" style="font-size:12px">Details</i></a>
                                    <a href="/Branchlimits/Delete/@item.LimitID"><i class="btn btn-danger btn-sm" style="font-size:12px">Delete</i></a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
  


  

    @section Scripts{
        @*@Scripts.Render("~/bundles/jqueryval")*@
        <script>
            $("#tbl").DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "responsive": false,
            });
        </script>

    }



